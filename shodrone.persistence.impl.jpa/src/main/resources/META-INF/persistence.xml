<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
             version="2.1">
  <persistence-unit name="shodrone.app">

    <!-- Framework -->
    <class>eapli.framework.infrastructure.pubsub.impl.simplepersistent.model.EventRecord</class>
    <class>eapli.framework.infrastructure.pubsub.impl.simplepersistent.model.EventConsumption</class>
    <class>eapli.framework.infrastructure.authz.domain.model.SystemUser</class>
    <class>eapli.framework.infrastructure.authz.domain.model.Role</class>
    <class>eapli.framework.infrastructure.authz.domain.model.RoleSet</class>
    <class>eapli.framework.infrastructure.authz.domain.model.RoleAssignment</class>

    <!-- Category Aggregate -->
    <class>core.Category.domain.Entities.Category</class>

    <!-- CRM Collaborator Aggregate -->
    <class>core.CRMCollaborator.domain.Entities.CRMCollaborator</class>

    <!-- CRM Manager Aggregate -->
    <class>core.CRMManager.domain.Entities.CRMManager</class>

    <!-- Customer Aggregate -->
    <class>core.Customer.domain.Entities.Customer</class>
    <class>core.Customer.domain.Entities.CustomerRepresentative</class>

    <!-- Drone Aggregate -->
    <class>core.Drone.domain.Entities.Drone</class>

    <!-- Figure Aggregate -->
    <class>core.Figure.domain.Entities.Figure</class>
    <class>core.Figure.domain.Entities.Exclusivity</class>

    <!-- Maintenance Aggregate -->
    <class>core.Maintenance.domain.Entities.Maintenance</class>

    <!-- ModelOfDrone Aggregate -->
    <class>core.ModelOfDrone.domain.Entities.Model</class>
    <class>core.ModelOfDrone.domain.Entities.Configuration</class>

    <!-- Show Designer Aggregate -->
    <class>core.ShowDesigner.domain.Entities.ShowDesigner</class>
    <class>core.Customer.domain.Entities.Customer</class>
    <class>core.Customer.domain.Entities.CustomerRepresentative</class>

    <!-- Show Proposal Aggregate -->
    <class>core.ShowProposal.domain.Entities.ShowProposal</class>
    <class>core.ShowProposal.domain.Entities.ShowConfiguration</class>
    <class>core.ShowProposal.domain.Entities.ShowConfigurationEntry</class>

    <!-- Proposal Delivery Info Aggregate -->
    <class>core.ProposalDeliveryInfo.domain.Entities.ProposalDeliveryInfo</class>

    <!-- Show Request Aggregate -->
    <class>core.ShowRequest.domain.Entities.ShowRequest</class>

    <!-- User Aggregate -->
    <class>core.User.domain.Entities.ShodroneUser</class>

    <!-- Service for Duration -->
    <class>core.ShowProposal.application.Service.DurationConverter</class>
    <class>core.ShowRequest.application.Service.DurationConverter</class>

    <properties>
      <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:tcp://10.9.21.98/~/DB/shodrone.app"/>
      <!--<property name="jakarta.persistence.jdbc.url" value="jdbc:h2:tcp://localhost/~/DB/shodrone.app"/>-->
      <property name="jakarta.persistence.jdbc.user" value="user"/>
      <property name="jakarta.persistence.jdbc.password" value="password"/>
      <property name="jakarta.persistence.schema-generation.database.action" value= "update"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>

      <!-- Hibernate C3PO Connection Pooling -->
      <property name="hibernate.connection.provider_class" value="org.hibernate.connection.C3P0ConnectionProvider"/>
      <property name="hibernate.c3p0.min_size" value="5" />
      <property name="hibernate.c3p0.max_size" value="20" />
      <property name="hibernate.c3p0.timeout" value="300" />
      <property name="hibernate.c3p0.max_statements" value="50" />
      <property name="hibernate.c3p0.idle_test_period" value="120" />

    </properties>

  </persistence-unit>
</persistence>
