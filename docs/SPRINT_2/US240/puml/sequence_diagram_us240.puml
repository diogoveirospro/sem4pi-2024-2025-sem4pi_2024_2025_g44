@startuml
'skinparam monochrome

skinparam packageStyle rectangle
skinparam shadowing false

autonumber

actor "DroneTech" as DT
participant ":CreateModelUI" as UI
participant ":CreateModelController" as CTRL
participant ":Persistence" as PERS
participant ":RepositoryFactory" as REPOS
participant ":repositoryFactory\n::RepositoryFactory" as REPOS_SINGLETON
participant "modelRepository\n:ModelRepository" as MOD_REPO
participant "model\n:Model" as MODEL

activate DT

DT -> UI : requests to create a new drone model
activate UI
    UI --> DT : asks for model name and configuration data
    deactivate UI
    DT -> UI : submits data
    activate UI
    UI --> DT : asks for confirmation
    deactivate UI
    DT -> UI : confirms data
    activate UI
    UI -> CTRL : createModel(modelName, configuration)
    activate CTRL
        CTRL --> CTRL :getModelRepository()
        activate CTRL
        CTRL -> PERS : getRepositoryFactory
                                                activate PERS
                                                PERS --> CTRL : repositoryFactory
                                                deactivate PERS
        CTRL -> REPOS : getInstance()
        activate REPOS
            REPOS --> CTRL : repositories
        deactivate REPOS

        CTRL -> REPOS_SINGLETON : getModelRepository()
        activate REPOS_SINGLETON
            REPOS_SINGLETON --> CTRL : modelRepository
            deactivate REPOS_SINGLETON
        CTRL -->CTRL : modelRepository

        deactivate CTRL
            CTRL -> MOD_REPO : createModel(modelName, configuration)

            activate MOD_REPO

                          MOD_REPO -> MOD_REPO: validateModel(modelName)
                    activate MOD_REPO
                        MOD_REPO --> MOD_REPO : true
                    deactivate MOD_REPO
        MOD_REPO -> MODEL : create(modelID, windTolerance, windSpeed, posTolerance, safetyStatus)
        activate MODEL
        MODEL--> MOD_REPO : true
        deactivate MODEL
                    MOD_REPO --> CTRL : true

        deactivate MOD_REPO

        CTRL --> UI : true

    deactivate CTRL

UI --> DT : displays success message
deactivate UI
deactivate DT

@enduml
