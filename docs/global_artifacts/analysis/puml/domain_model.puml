@startuml

package "Customer " <<aggregate>> {
    class Customer <<Entity>> <<root>>{
    }

    class CustomerRepresentative <<Entity>>{
    }

    enum CustomerRepresentativeStatus <<Value Object>>{
    }

    class Address <<Value Object>>{
    }

    class VatNumber <<Value Object>>{
    }

    enum CustomerStatus <<Value Object>>{
    }

    enum CustomerType <<Value Object>>{
    }

    class Position <<Value Object>>{
    }

    'Customer -> x
    Customer  --> "1..*" CustomerRepresentative : represented by
    Customer --> "1" VatNumber : vat
    Customer --> "1" Address : address
    Customer --> "1" CustomerStatus : status
    Customer --> "1" CustomerType : type

    'Representative -> x
    CustomerRepresentative --> "1" Position : position
    CustomerRepresentative --> "1" CustomerRepresentativeStatus : status

}

package "CRMCollaborator " <<aggregate>> {

    class CRMCollaborator <<Entity>> <<root>>{
    }
}

package "Drone " <<aggregate>> {

    class Drone <<Entity>> <<root>>{
    }

    class SerialNumber <<Value Object>>{
    }

    enum DroneStatus <<Value Object>>{
    }

    'Drone -> x
    Drone --> "1" DroneStatus: status
    Drone --> "1" SerialNumber: serialNumber
}

package "ModelOfDrone " <<aggregate>> {

    class Model <<Entity>> <<root>>{
    }

    class WindTolerance <<Value Object>>{
    }

    class WindSpeed <<Value Object>>{
    }

    class PositionTolerance <<Value Object>>{
    }

    enum SafetyStatus <<Value Object>>{
    }

    'Model -> x
    Model --> "1" WindTolerance: windTolerance
    Model --> "1" WindSpeed: windSpeed
    Model --> "1" PositionTolerance: positionTolerance
    Model --> "1" SafetyStatus: safetyStatus

    'Drone -> x
    Drone --> "1" Model: uses

}

package "Maintenance " <<aggregate>> {

    class Maintenance <<Entity>> <<root>>{
    }

    enum MaintenanceType <<Value Object>>{
    }

    'Maintenance -> x
    Maintenance --> "1" MaintenanceType: type

    Drone --> "1..*" Maintenance: undergoes
}

package "Figure " <<aggregate>> {

    class Figure <<Entity>> <<root>>{
    }

    class Code <<Value Object>>{
    }

    class Version <<Value Object>>{
    }

    class DSLDescription <<Value Object>>{
    }

    enum FigureStatus <<Value Object>>{
    }

    class Keyword <<Value Object>>{
    }

    class Exclusivity <<Entity>>{
    }

    class DSLValidate <<Service>>{
    }


    'Figure -> x
    Figure --> "1" DSLDescription: DSLDescription
    Figure --> "1..*" Keyword: keywords
    Figure --> "1" Exclusivity: exclusivity
    Figure --> "1" Code: code
    Figure --> "1" Version: version
    Figure --> "1" FigureStatus: figureStatus

    'DSLValidate -> x
    DSLValidate ..> "1" DSLDescription: validates

    'Exclusivity -> x
    Exclusivity --> "1" Customer: exclusive to
}

package "Category " <<aggregate>>{

    class Category <<Entity>> <<root>>{
    }

    enum CategoryStatus <<Value Object>>{
    }

    'Category -> x
    Category --> "1" CategoryStatus: categoryStatus

    'Figure -> x
    Figure --> "1..*" Category: categories
}

package "ShowRequest " <<aggregate>>{

    class Location <<Value Object>>{
    }

    enum ShowRequestStatus <<Value Object>>{
    }

    class ShowRequest <<Entity>> <<root>>{
    }

    'ShowRequest -> x
    ShowRequest --> "1" CRMCollaborator : submitted by
    ShowRequest --> "1" Customer: requested by
    ShowRequest --> "1" Location: place
    ShowRequest --> "1" ShowRequestStatus: requestStatus
}

package "ShowProposal " <<aggregate>>{

    enum ShowProposalStatus <<Value Object>>{
    }

    class ShowProposal <<Entity>> <<root>>{
    }

    class ShowProposalTemplate <<Value Object>>{
    }

    'ShowProposal -> x
    ShowProposal --> "1" CRMCollaborator: created by
    ShowProposal --> "1" ShowRequest: based on
    ShowProposal --> "1" ShowProposalStatus: proposalStatus
    ShowProposal --> "0..*" Figure : requests new
    ShowProposal --> "1" ShowProposalTemplate: template
    ShowProposal --> "1..*" Model: uses
}

package "ShowDesigner " <<aggregate>>{

    class ShowDesigner <<Entity>> <<root>>{
    }

    'Figure -> x
    Figure --> "1" ShowDesigner: created by
}

package Shared {

    class Time <<Value Object>>{
    }

    class Name <<Value Object>>{
    }

    class Email <<Value Object>>{
    }

    class PhoneNumber <<Value Object>>{
    }

    class Date <<Value Object>>{
    }

    class QuantityOfDrones <<Value Object>>{
    }

    class Description <<Value Object>>{
    }

    'CRM Collaborator -> x
    CRMCollaborator --> "1" Name: name
    CRMCollaborator --> "1" Email: email
    CRMCollaborator --> "1" PhoneNumber: phoneNumber

    'ShowDesigner -> x
    ShowDesigner --> "1" Name: name
    ShowDesigner --> "1" Email: email
    ShowDesigner --> "1" PhoneNumber: phoneNumber

    'Customer -> x
    Customer ----> "1" Name : name

    'Representative -> x
    CustomerRepresentative --> "1" Name : name
    CustomerRepresentative --> "1" Email : email
    CustomerRepresentative --> "1" PhoneNumber : phoneNumber

    'ShowRequest -> x
    ShowRequest ----> "1" Time : duration
    ShowRequest ----> "1" Date : startTime
    ShowRequest ----> "1" QuantityOfDrones: qnt_drones
    ShowRequest ----> "1" Description: description

    'Maintenance -> x
    Maintenance ----> "1" Date: date
    Maintenance ----> "1" Description: description

    'ShowProposal -> x
    ShowProposal ----> "1" QuantityOfDrones: qnt_drones
    ShowProposal ----> "1" Time: time
    ShowProposal ----> "1" Date: date

    'Category -> x
    Category ----> "1" Name: name
    Category ----> "1" Description: description

    'Figure -> x
    Figure ----> "1" Description: description
}

package "EAPLI Framework" <<framework>> {
    class DateInterval <<Value Object>>{
    }

    Exclusivity --> "1" DateInterval: duration
}

@enduml