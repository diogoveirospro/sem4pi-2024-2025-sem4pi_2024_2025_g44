        + validateDSLDescription(): boolean
    }

    class DSLDescription <<Value Object>> {
    }

    class DSLValidate <<Service>> {
        + validate(dslDescription): boolean
    }

}

package "shodrone.plugin.figure" #DDDDDD {

    class ANTLRDSLValidatorPlugin <<Plugin>> {
        + validateDSL(code): boolean
    }

    class FigureLexer <<Generated>> {
    }

    note right of FigureLexer
        Generated by ANTLR from DSL grammar (.g4)
    end note

    class FigureParser <<Generated>> {
    }

    note right of FigureParser
        Generated by ANTLR from DSL grammar (.g4)
    end note
}

